  remove:
  - "ability:the_rogue_talent_gained_at_4th_level#rogue"
- add: "ability:revolutionarys_cause#rogue_agitator"
  remove:
  - "ability:the_rogue_talent_gained_at_8th_level#rogue"
- add: "ability:leadership#rogue_agitator"
  remove:
  - "ability:the_rogue_talent_gained_at_12th_level#rogue"
features:
- id: "ability:reputation#rogue_agitator"
  name: "Reputation"
  label: null
  type: null
  description: "This ability functions as the renown vigilante social talent. In addition\
    \ to improving attitudes, it also improves the agitator's starting influence and\
    \ reputation with contacts in the area by one level or step.\nFor the purpose\
    \ of vigilante social talents, the agitator does not have a vigilante identity\
    \ and is always considered to be in her social identity, unless she has another\
    \ identity (such as from the vigilante class). If the agitator has another identity,\
    \ she does not gain any benefits from renown while in that identity unless she\
    \ has the renown social talent or a similar ability."
  effects: null
  prerequisites: null
  source: "Pathfinder Campaign Setting: Inner Sea Intrigue"
- id: "ability:ready_for_betrayal#rogue_agitator"
  name: "Ready for Betrayal"
  label: null
  type: null
  description: "At 3rd level, a agitator gains a +1 bonus on Perception checks to\
    \ recognize disguises and notice hiding creatures and on Sense Motive checks to\
    \ disbelieve lies. These bonuses increase by 1 every 3 rogue levels thereafter\
    \ (to a maximum of +6 at 18th level)."
  effects: null
  prerequisites: null
  source: "Pathfinder Campaign Setting: Inner Sea Intrigue"
- id: "ability:enthralling_agitation#rogue_agitator"
  name: "Enthralling Agitation"
  label: null
  type: null
  description: "At 4th level, a agitator can captivate a crowd once per day, as per\
    \ the spell enthrall (DC = 10 + 1/2 the agitator's rogue level + her Charisma\
    \ modifier).\nDuring the spell's effect, the agitator can attempt a DC 15 Charisma\
    \ check to increase her individual or organizational influence with the members\
    \ of the crowd by 1 rank or step. Or, if the crowd members' attitudes toward the\
    \ agitator are indifferent or worse, this check can improve their attitudes by\
    \ 1 step. The agitator can never use this ability to increase her individual or\
    \ organization influence or improve the crowd's attitude by more than 2 ranks\
    \ or steps."
  effects: null
  prerequisites: null
  source: "Pathfinder Campaign Setting: Inner Sea Intrigue"
- id: "ability:revolutionarys_cause#rogue_agitator"
  name: "Revolutionary's Cause"
  label: null
  type: null
  description: "At 8th level, the agitator can lift an enthralled crowd's emotions\
    \ and turn them toward a common purpose. As a standard action after she has used\
    \ her enthralling agitation-- but before the enthrall effect wears off--she can\
    \ target the affected creatures with a plausible suggestion (DC = 10 + 1/2 her\
    \ rogue level + her Charisma modifier). that has a duration of up to 1 day."
  effects: null
  prerequisites: null
  source: "Pathfinder Campaign Setting: Inner Sea Intrigue"
- id: "ability:leadership#rogue_agitator"
  name: "Leadership"
  label: null
  type: null
  description: "At 12th level, a agitator gains Leadership as a bonus feat. If the\
    \ agitator already has the Leadership feat, she doubles her Charisma modifier\
    \ when calculating her base Leadership score."
  effects: null
  prerequisites: null
  source: "Pathfinder Campaign Setting: Inner Sea Intrigue"
